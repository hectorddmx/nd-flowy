{
  "name": "Workflowy Flow",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "initializeCommand": "just devcontainer-env 2>/dev/null || mise exec -- sh -c 'echo WF_API_KEY=$(printenv WF_API_KEY) > .env.devcontainer'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/app/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true
        }
      }
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Workflowy Flow App",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "uv sync",
  "postStartCommand": "echo 'Dev container ready. Run: uv run uvicorn app.main:app --reload --host 0.0.0.0'",
  "remoteUser": "root"
}
